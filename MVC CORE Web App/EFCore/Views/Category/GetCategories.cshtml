@model List<Category> //controllerden gelen veri karşılandı.

    To create a new category <a asp-action="CreateCategory">Click Here</a> @*aspaction ile hangi actiona gideceğini söylüyoruz...Aynı controllerda bulunduğu için tekrar controller vermemize gerek yok.*@

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Category Name</th>
        <th>Description</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (Category item in Model) @*Modelde  Categori tipinde dönecez*@
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>
            <td><a asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-warning">Update</a></td>
            <td><a asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
        </tr>
    }
</table>